# Database URL (PostgreSQL)
# Replace the placeholders with your actual database credentials.
# Format: postgres://<USER>:<PASSWORD>@<HOST>:<PORT>/<DATABASE>
# Example: postgres://myuser:mypassword@localhost:5432/mydatabase

DATABASE_URL=postgres://newuser:newpassword@localhost:5432/newdatabase

# Secret key for Django
# Generate a new secret key and keep it secure.
# Example: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'

SECRET_KEY=your-secret-key-here

# Debug mode
# - Set to "True" for development (debug mode enabled).
# - Set to "False" for production (debug mode disabled).
# WARNING: Never set DEBUG=True in production! It exposes sensitive information.

DEBUG=False

# The following environment variables are used only for configuring Docker.
# This should match data in DATABASE_URL.
# Example:DATABASE_URL=postgres://newuser:newpassword@localhost:5432/newdatabase

POSTGRES_DB=newdatabase
POSTGRES_USER=newuser
POSTGRES_PASSWORD=newpassword